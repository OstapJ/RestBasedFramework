<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:context="http://www.springframework.org/schema/context"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
	   http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context-4.0.xsd">

	<context:property-placeholder location="classpath:runconfig.properties" system-properties-mode="OVERRIDE"/>
	<bean id="applicationContextProvider" class="com.epam.rest.ApplicationContextProvider"/>
	<context:component-scan base-package="com.epam.rest"/>

	<bean id="propertyFiles" class="java.util.ArrayList">
		<constructor-arg>
			<list>
				<value>runconfig</value>
				<value>enterprise</value> <!-- keep this item last since its values may need to be overridden -->
			</list>
		</constructor-arg>
	</bean>

    <bean class="com.epam.rest.configuration.RestfulClientConfiguration"/>

	<bean id="mappingJackson2HttpMessageConverter"
		  class="org.springframework.http.converter.json.MappingJackson2HttpMessageConverter">
	</bean>

	<bean id="messageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
		<property name="basenames">
			<ref bean="propertyFiles"/>
		</property>
	</bean>


</beans>

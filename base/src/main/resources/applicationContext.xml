<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:context="http://www.springframework.org/schema/context"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">
	<context:annotation-config/>

	<context:property-placeholder location="classpath:runconfig.properties" system-properties-mode="OVERRIDE"/>
	<bean id="applicationContextProvider" class="com.epam.rest.ApplicationContextProvider"/>
	<bean id="webDriver" class="com.epam.rest.WebDriver"/>

	<bean id="messageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
		<property name="basenames">
			<ref bean="propertyFiles"/>
		</property>
	</bean>


	<context:component-scan base-package="com.epam.rest"/>
</beans>